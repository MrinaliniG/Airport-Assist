<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#FFF9E4"
    tools:context=".FLightNumberActivity">

    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:apiKey="AIzaSyAsRSoJdEe1WF7XjLG5FfOhAyuROfTx5UM"
        android:clickable="true"
        android:enabled="true" />

    <EditText
        android:id="@+id/navigationDetails"
        android:layout_width="match_parent"
        android:ems="10"
        android:inputType="text"
        android:text="Navigation Instructions"
        android:textAlignment="center"
        android:textSize="25dp"
        android:background="@drawable/text_area_details"
        android:layout_height="300dp"/>

</LinearLayout>